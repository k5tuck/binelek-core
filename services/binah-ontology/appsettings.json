{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Neo4j": "Information",
      "Confluent.Kafka": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "OntologyDb": "Host=localhost;Port=5432;Database=binah_ontology;Username=binah;Password=Binah-db-password"
  },
  "Neo4j": {
    "Uri": "bolt://localhost:7687",
    "Username": "neo4j",
    "Password": "Binah-secure-password",
    "Database": "Binah"
  },
  "Neo4jDataNetwork": {
    "Uri": "bolt://localhost:7688",
    "Username": "neo4j",
    "Password": "Binah-secure-password",
    "Database": "data-network"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "Topics": {
      "OntologyEvents": "Binah.ontology.events",
      "ContextEvents": "Binah.context.events",
      "AiEvents": "Binah.ai.events",
      "EnrichmentRequests": "binah.ontology.enrichment.requested",
      "PipelineCompletion": "binah.pipeline.execution.completed"
    },
    "ConsumerGroups": {
      "EnrichmentRequests": "binah-ontology-enrichment",
      "PipelineCompletion": "binah-ontology-pipeline-completion"
    },
    "Consumer": {
      "MaxRetries": 3,
      "RetryDelayMs": 1000
    },
    "GroupId": "Binah.Ontology"
  },
  "Cors": {
    "AllowedOrigins": ["http://localhost:3000", "http://localhost:8080"]
  },
  "Swagger": {
    "Enabled": true,
    "RoutePrefix": "swagger"
  },
  "Authentication": {
    "Jwt": {
      "SecretKey": "${JWT_SECRET_KEY}",
      "Issuer": "binah-auth",
      "Audience": "binah-clients"
    }
  }
}
